                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button x:Name="TabButtonSearch_3" Content="Search" HorizontalAlignment="Left" Margin="10,231,0,0" Width="93" Height="71" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="TabSearch_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button x:Name="TabButtonSettings_3" Content="Settings" HorizontalAlignment="Left" Margin="10,313,0,0" Width="93" Height="69" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="TabSettings_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Border x:Name="LeftBorder_2" CornerRadius="10" BorderThickness="1" HorizontalAlignment="Left" Height="137" VerticalAlignment="Top" Width="93" Background="#FF3E3E42" Margin="10,6,0,0" BorderBrush="Black"/>
                            <Button x:Name="TicketSearchButton_Copy" Content="Reset Database" HorizontalAlignment="Left" Width="105" Height="30" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="Button_Click" Margin="120,-50,0,290">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="TabTimer" Header="TabItem" BorderBrush="{x:Null}" Visibility="Hidden" IsSelected="True" d:IsHidden="True" Background="Black">
                        <Grid HorizontalAlignment="Left" Height="500" VerticalAlignment="Top" Width="800" Margin="0,-24,0,0">
                            <Border x:Name="TopBorder" CornerRadius="10" BorderThickness="1" HorizontalAlignment="Center" Height="134" VerticalAlignment="Top" Width="759" Background="#FF3E3E42" BorderBrush="Black" Margin="-16,6,0,0">
                                <Grid x:Name="Grid" Margin="0,-3,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="9*" />
                                        <RowDefinition Height="10*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBox x:Name="NameBox" TextWrapping="NoWrap"  Text="" Margin="398,20,198,9" Style="{StaticResource RoundedTextBox}" TextChanged="TextBox_TextChanged" BorderBrush="#FF060606"/>
                                    <Label x:Name="TicketLabel" Content="Ticket number:" HorizontalAlignment="Left" Margin="26,24,0,0" VerticalAlignment="Top" Foreground="#FFFBF6F6"/>
                                    <Label x:Name="NameLabel1" Content="Ticket name:" HorizontalAlignment="Left" Margin="317,24,0,0" VerticalAlignment="Top" Foreground="#FFFBF6F6"/>
                                    <Label x:Name="NameLabel2" Content="Ticket type:" HorizontalAlignment="Left" Margin="26,17,0,0" VerticalAlignment="Top" Foreground="#FFFBF6F6" Grid.Row="1"/>
                                    <TextBox x:Name="TicketBox" TextWrapping="Wrap" Text="" Margin="119,20,478,9" Style="{StaticResource RoundedTextBox}" TextChanged="TextBox_TextChanged" BorderBrush="#FF0A0A0A"/>

                                </Grid>

                            </Border>
                            <Border CornerRadius="10" BorderThickness="1" HorizontalAlignment="Left" Height="230" VerticalAlignment="Top" Width="555" Background="#FFFBFBFB" Margin="114,152,0,0" BorderBrush="Black">
                                <ComboBox x:Name="TypeCombo"  Margin="15,-65,370,267" SelectedIndex="0" BorderBrush="#FF080808" Background="#FFFFF9F9">
                                    <ComboBoxItem Content="Ticket"/>
                                    <ComboBoxItem Content="Meeting"/>
                                    <ComboBoxItem Content="Project"/>
                                    <ComboBoxItem Content="Other"/>
                                </ComboBox>
                            </Border>
                            <Button x:Name="TabButtonTimer"  Content="Timer" HorizontalAlignment="Left" Margin="10,152,0,0" Width="93" Height="71" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="TabTicket_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button x:Name="TabButtonSearch" Content="Search" HorizontalAlignment="Left" Margin="10,231,0,0" Width="93" Height="71" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="TabSearch_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button x:Name="TabButtonSettings" Content="Settings" HorizontalAlignment="Left" Margin="10,313,0,0" Width="93" Height="69" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="TabSettings_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button x:Name="Start" Content="Start" HorizontalAlignment="Left" Margin="677,152,0,0" Width="93" Height="51" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="Start_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button x:Name="Pause" Content="Pause" HorizontalAlignment="Left" Margin="677,213,0,0" Width="93" Height="49" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="Pause_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button Content="Stop" HorizontalAlignment="Left" Margin="677,273,0,0" Width="93" Height="50" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="Stop_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button x:Name="Clear" Content="Clear" HorizontalAlignment="Left" Margin="677,332,0,0" Width="93" Height="50" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="Clear_click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button x:Name="Enter" Content="Enter" HorizontalAlignment="Left" Margin="617,29,0,0" Width="88" Height="30" VerticalAlignment="Top" Background="#FFEFEFF7" Foreground="#FF0E0D0D" BorderBrush="#FF252526" Click="Set_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Label x:Name="TimeLabel" Content="00:00:00" HorizontalAlignment="Center" Margin="0,190,0,0" VerticalAlignment="Top" FontSize="100" Width="376" Height="142"/>
                            <Label x:Name="TrackingLabel" Content="" Width="210" Margin="4,180,171,0" FontSize="18"/>
                        </Grid>
                    </TabItem>
                </TabControl>
                <Button x:Name="Close" Content="X" HorizontalAlignment="Left" Width="38" Height="26" VerticalAlignment="Top" Background="#FFEFEFF7" Foreground="#FF0E0000" BorderBrush="#FF252526" Click="CloseButton_click" Margin="209,-17,0,0" Grid.Column="4">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Label Content="Ticket Time" HorizontalAlignment="Left" Margin="37,-17,0,0" VerticalAlignment="Top" Height="25" Width="74" Grid.ColumnSpan="3" Foreground="#FFFFFEFE"/>

            </Grid>







        </Border>







    </Border>







</Window>

