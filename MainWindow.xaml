                </Border>

                <TabControl x:Name="TabMaster" Grid.ColumnSpan="5" BorderThickness="0" Background="#FF23597C" SelectionChanged="TabControl_SelectionChanged" Margin="0,14,10,10">

                    <TabItem x:Name="TabSearch" Header="TabItem" Visibility="Hidden" Margin="0,-24,0,0">
                        <Grid HorizontalAlignment="Left" Height="500" VerticalAlignment="Top" Width="800" Margin="0,-24,0,0">
                            <Border x:Name="SearchView" CornerRadius="10" BorderThickness="1" HorizontalAlignment="Left" Height="375" VerticalAlignment="Top" Width="650" Background="#FFFBFBFB" Margin="114,8,0,0" BorderBrush="Black"/>
                            <DatePicker x:Name="From" Width ="105" Height="25" Margin="400,0,-200,390" SelectedDate="{Binding SelectedDate}"/>
                            <DatePicker x:Name="To" Width ="105" Height="25" Margin="608,13,6,350" SelectedDate="{Binding SelectedDate}"/>
                            <Button x:Name="TabButtonTimer_2" Content="Timer" HorizontalAlignment="Left" Margin="10,152,0,0" Width="93" Height="71" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="TabTicket_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button x:Name="TabButtonSearch_2" Content="Search" HorizontalAlignment="Left" Margin="10,231,0,0" Width="93" Height="71" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="TabSearch_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button x:Name="TabButtonSettings_2" Content="Settings" HorizontalAlignment="Left" Margin="10,313,0,0" Width="93" Height="69" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="TabSettings_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Label x:Name="Between" Content="Between" Background="#FFFAFAFD" Height="25" Width="61" Margin="540,0,0,450"/>
                            <Button x:Name="SearchBetween" Content="Search" HorizontalAlignment="Center" Width="105" Height="30" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="SearchBetween_Click" Margin="600,0,0,275">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Label x:Name="TicketSearchLabel" Content="By Ticket" Background="#FFFAFAFD" Height="25" Width="61" Margin="550,0,0,210"/>
                            <TextBox x:Name="TicketSearchBox" TextWrapping="Wrap" Height="25" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="650,0,0,170"/>
                            <Button x:Name="TicketSearchButton" Content="Search" HorizontalAlignment="Left" Width="105" Height="30" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="SearchTicket_Click" Margin="650,0,0,110">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <DataGrid x:Name="TicketGrid" VerticalScrollBarVisibility="Visible" CanUserAddRows="False"  ColumnWidth="*" AutoGenerateColumns="True" Width="500" Height="330" Margin="0,-88,50,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border x:Name="LeftBorder" CornerRadius="10" BorderThickness="1" HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="93" Background="#FF3E3E42" Margin="10,6,0,0" BorderBrush="Black"/>
                            <Label x:Name="NameSearchLabel" Content="By Name" Background="#FFFAFAFD" Height="25" Width="61" Margin="644,128,94,180"/>
                            <Button x:Name="NameSearchButton" Content="Search" HorizontalAlignment="Left" Width="105" Height="30" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="SearchName_Click" Margin="650,150,0,100">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <TextBox x:Name="NameSearchBox" TextWrapping="Wrap" Height="25" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" TextChanged="TextBox_TextChanged" Margin="650,231,0,0"/>
                            <Label x:Name="TypeSearchLabel" Content="By Type" Background="#FFFAFAFD" Height="25" Width="61" Margin="555,110,0,0"/>
                            <Button x:Name="TypeSearchButton" Content="Search" HorizontalAlignment="Left" Width="105" Height="30" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="SearchType_Click" Margin="650,320,0,105">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <TextBox x:Name="TypeSearchBox" TextWrapping="Wrap" Height="25" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="650,315,0,0"/>
                            <Button x:Name="TabButtonClear" Content="Clear Search" HorizontalAlignment="Left" Width="93" Height="71" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="SearchClear_Click" Margin="10,73,0,0">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>


                        </Grid>
                    </TabItem>
                    <TabItem x:Name="TabSettings" Visibility="Hidden">
                        <Grid HorizontalAlignment="Left" Height="500" VerticalAlignment="Top" Width="800" Margin="0,-24,0,0">
                            <Border x:Name="TabelView1" CornerRadius="10" BorderThickness="1" HorizontalAlignment="Left" Height="375" VerticalAlignment="Top" Width="650" Background="#FFFBFBFB" Margin="114,8,0,0" BorderBrush="Black"/>
