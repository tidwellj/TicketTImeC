<Window x:Class="TicketTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketTime"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">







    <Window.Resources>

        <!-- Style for the TextBox -->
        <Style x:Key="RoundedTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="5">
                            <!-- Rounded corners -->
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



    </Window.Resources>






    <Grid Background="#FF23597C" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="51*"/>
        </Grid.ColumnDefinitions>
        <Border CornerRadius="10" BorderThickness="1" HorizontalAlignment="Left" Height="135" VerticalAlignment="Top" Width="765" Background="#FF3E3E42"  Grid.ColumnSpan="2" Margin="10,18,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="9*" />
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBox x:Name="Ticket" TextWrapping="Wrap" Text="Ticket Number" Margin="9,20,538,9" Style="{StaticResource RoundedTextBox}" TextChanged="TextBox_TextChanged"/>
                <TextBox x:Name="Ticket_Copy" TextWrapping="NoWrap"  Text="Ticket Number" Margin="293,20,256,9" Style="{StaticResource RoundedTextBox}" TextChanged="TextBox_TextChanged"/>

            </Grid>

        </Border>
        <Border CornerRadius="10" BorderThickness="1" HorizontalAlignment="Left" Height="230" VerticalAlignment="Top" Width="551" Background="#FFFBFBFB"  Grid.ColumnSpan="2" Margin="115,165,0,0">
            <ComboBox  Margin="-95,-66,431,268" SelectedIndex="0">
                <ComboBoxItem Content="Ticket"/>
                <ComboBoxItem Content="Meeting"/>
                <ComboBoxItem Content="Project"/>
                <ComboBoxItem Content="Unclassified"/>
            </ComboBox>
        </Border>
        <Button Content="Timer" HorizontalAlignment="Left" Margin="10,165,0,0" Width="94" Height="70" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="Button_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Search" HorizontalAlignment="Left" Margin="10,245,0,0" Width="94" Height="70" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="Button_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Settings" HorizontalAlignment="Left" Margin="10,325,0,0" Width="94" Height="70" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="Button_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Start" HorizontalAlignment="Left" Margin="144,165,0,0" Width="94" Height="50" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="Button_Click" Grid.Column="1">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Pause" HorizontalAlignment="Left" Margin="144,225,0,0" Width="94" Height="50" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="Button_Click" Grid.Column="1">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="144,285,0,0" Width="94" Height="50" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="Button_Click" Grid.Column="1">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="144,345,0,0" Width="94" Height="50" VerticalAlignment="Top" Background="#FF3E3E42" Foreground="White" BorderBrush="#FF252526" Click="Button_Click" Grid.Column="1">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Enter" HorizontalAlignment="Left" Margin="76,70,0,0" Width="89" Height="30" VerticalAlignment="Top" Background="#FFEFEFF7" Foreground="#FF0E0D0D" BorderBrush="#FF252526" Click="Button_Click" Grid.Column="1">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Button.Resources>
        </Button>


        <Label Content="00:00:00" HorizontalAlignment="Left" Margin="200,212,0,0" VerticalAlignment="Top" FontSize="100" Grid.ColumnSpan="2" Width="382"/>

    </Grid>







</Window>

